    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (Inventory)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-inventory",
            "program": "${workspaceFolder}/src/Services/ArchT.Services.Inventory/bin/Debug/netcoreapp2.1/ArchT.Services.Inventory.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Services/ArchT.Services.Inventory",
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": true
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:5000"
            }
        },
        {
            "name": ".NET Core Launch (Trade)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-trade",
            "program": "${workspaceFolder}/src/Services/ArchT.Services.Trade/bin/Debug/netcoreapp2.1/ArchT.Services.Trade.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Services/ArchT.Services.Trade",
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": true
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:5001"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}